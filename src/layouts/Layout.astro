---
import '@fontsource-variable/nunito'

import Footer from '../components/layout/Footer.astro'
import Header from '../components/layout/Header.astro'

import '../styles/global.css'
---

<!doctype html>
<html
  lang='es'
  class='bg-[#0E0E11] text-white font-nunito scroll-smooth'
>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/svg+xml'
      href='/favicon.svg'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>Astro Basics</title>
  </head>
  <body>
    <div class='blur-circle'></div>

    <div
      style='background:linear-gradient(45deg, rgba(96, 250, 155, 0) 10.79%, rgba(96, 250, 170, 0.03) 40.92%, rgba(96, 250, 155, 0) 90.35%)'
      class='fixed top-0 left-0 w-full h-full pointer-events-none -z-1'
    >
    </div>

    <Header />

    <div class='min-h-[85vh]'>
      <slot />
    </div>

    <Footer />

    <!-- <Footer /> -->
  </body>
</html>
